---
interface Props {
  developer: {
    name: string;
    logoUrl: string;
    imageUrl?: string;
    description: string;
  };
  contact: {
    agentName: string;
    phone: string;
    email: string;
    website: string;
  };
  reverseOrder?: boolean;
  heroImage?: string;
}

const { developer, contact, reverseOrder = false, heroImage } = Astro.props;
---

<section class="py-16 bg-grey-light">
  <div class="container px-6">
    <div
      class={`grid lg:grid-cols-2 gap-12 items-center ${reverseOrder ? "lg:grid-flow-dense" : ""}`}
    >
      <!-- Image Column -->
      <div class={`${reverseOrder ? "lg:col-start-2" : ""}`}>
        {
          heroImage ? (
            <div class="aspect-wide rounded-lg overflow-hidden shadow-lg">
              <img
                src={heroImage}
                alt={`${developer.name} development`}
                class="w-full h-full object-cover"
              />
            </div>
          ) : (
            <div class="aspect-wide rounded-lg bg-grey flex items-center justify-center">
              <span class="text-grey-dark text-lg">Imagen no disponible</span>
            </div>
          )
        }
      </div>

      <!-- Content Column -->
      <div class={`space-y-8 ${reverseOrder ? "lg:col-start-1" : ""}`}>
        <!-- Developer Section -->
        <div class="space-y-6">
          <div class="flex items-center space-x-4">
            <img
              src={developer.logoUrl}
              alt={developer.name}
              class="h-12 w-auto object-contain"
              onerror="this.style.display='none'"
            />
            <h2 class="text-3xl font-semibold text-black">
              {developer.name}
            </h2>
          </div>

          <p class="text-grey-dark text-lg leading-relaxed">
            {developer.description}
          </p>
        </div>

        <!-- Contact Section -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-grey-light">
          <h3 class="text-xl font-semibold text-black mb-4">Contacto</h3>
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <svg
                class="w-5 h-5 text-orange"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                ></path>
                <path
                  d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                ></path>
              </svg>
              <span class="text-grey-dark"
                ><strong>Agente:</strong> {contact.agentName}</span
              >
            </div>

            <div class="flex items-center space-x-3">
              <svg
                class="w-5 h-5 text-orange"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                ></path>
              </svg>
              <a
                href={`tel:${contact.phone}`}
                class="text-grey-dark hover:text-orange transition-colors"
              >
                <strong>Tel√©fono:</strong>
                {contact.phone}
              </a>
            </div>

            <div class="flex items-center space-x-3">
              <svg
                class="w-5 h-5 text-orange"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                ></path>
                <path
                  d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                ></path>
              </svg>
              <a
                href={`mailto:${contact.email}`}
                class="text-grey-dark hover:text-orange transition-colors"
              >
                <strong>Email:</strong>
                {contact.email}
              </a>
            </div>

            {
              contact.website && (
                <div class="flex items-center space-x-3">
                  <svg
                    class="w-5 h-5 text-orange"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.559-.499-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.559.499.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.497-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <a
                    href={contact.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-grey-dark hover:text-orange transition-colors"
                  >
                    <strong>Sitio web:</strong> {contact.website}
                  </a>
                </div>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
