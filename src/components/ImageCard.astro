---
interface Props {
  image?: string;
  title: string;
  description: string;
  className?: string;
}

const { image, title, description, className = "" } = Astro.props;
---

<div class={`overflow-hidden rounded-lg ${className}`}>
  <div class={`relative aspect-[4/3] rounded-lg ${image ? 'bg-cover bg-center' : 'bg-gradient-to-br from-purple-400 to-purple-600'}`} style={image ? `background-image: url('${image}')` : ''}>
    <div class="absolute inset-0 bg-black bg-opacity-20 rounded-lg"></div>
    <div class="relative z-10 p-6 h-full flex flex-col justify-end">
      <h3 class="text-white font-semibold text-xl mb-2">{title}</h3>
    </div>
  </div>
  
  <div class="p-4">
    <p class="text-gray-600 text-sm leading-relaxed">{description}</p>
  </div>
</div>
