---
interface Props {
  propertyName: string;
  propertyType: string;
  developer: {
    name: string;
    logoUrl: string;
    description: string;
  };
  location: {
    address: string;
    neighborhood: string;
    city: string;
    country: string;
    mapsLink: string;
  };
  delivery: {
    type: string;
    yearBuilt: number;
  };
}

const { propertyName, propertyType, developer, location, delivery } =
  Astro.props;

// Property type tags for the hero section
const propertyTags = ["Lujo", "Para familias", "Para vivir", "Para reventa"];
const heroImage = "/images/exterior1.JPG";
---

<section class="relative">
  <!-- Hero Section -->
  <div
    class="relative h-screen bg-cover bg-center bg-no-repeat bg-grey-dark"
    style={`background-image: url(${heroImage});`}
  >
    <!-- Overlay -->
    <div class="absolute inset-0 bg-overlay"></div>

    <!-- Hero Content -->
    <div
      class="relative z-10 container mx-auto px-4 py-28 flex flex-col justify-between h-full"
    >
      <!-- Top Content -->
      <div class="flex justify-between items-start">
        <div>
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-semibold text-white mb-2 max-w-2xl"
          >
            {propertyName}
          </h1>

          <!-- CTA Button -->
          <button
            class="inline-flex items-center justify-between bg-white text-black px-8 py-4 rounded-lg text-lg font-regular hover:bg-orange hover:text-white transition-all duration-300 min-w-[280px] mb-2"
          >
            <span>Obtener consultoría</span>
            <svg
              class="w-5 h-5 ml-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </button>

          <!-- Gallery Anchor Link -->
          <a
            href="#galeria"
            class="block text-white text-lg underline-offset-4 hover:underline transition-all duration-200 mb-2"
          >
            Ver la Galería
          </a>
        </div>
      </div>

      <!-- Pills Row at the bottom -->
      <div class="flex flex-wrap gap-3 mb-4">
        <span
          class="bg-white text-black px-6 py-2 rounded-full text-sm font-regular shadow"
          >{propertyType}</span
        >
        <span
          class="bg-white text-black px-6 py-2 rounded-full text-sm font-regular shadow"
          >{location.city}</span
        >
        <span
          class="bg-white text-black px-6 py-2 rounded-full text-sm font-regular shadow"
          >{delivery.type}</span
        >
      </div>
    </div>
  </div>

  <!-- Location and Developer Info -->
  <div class="bg-white py-8">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Location -->
        <div class="flex items-center space-x-4">
          <div
            class="w-12 h-12 bg-grey-dark rounded-full flex items-center justify-center flex-shrink-0"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
          <div>
            <p class="text-grey text-sm font-regular mb-1">Ubicación</p>
            <h3 class="text-xl md:text-2xl font-semibold text-black">
              {location.neighborhood}, {location.city}
            </h3>
          </div>
        </div>

        <!-- Developer -->
        <div class="flex items-center space-x-4">
          <div
            class="w-12 h-12 bg-grey-dark rounded-full flex items-center justify-center flex-shrink-0"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
          <div>
            <p class="text-grey text-sm font-regular mb-1">Desarrollador</p>
            <h3 class="text-xl md:text-2xl font-semibold text-black">
              {developer.name}
            </h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
