---
interface Props {
  title: string;
  value: string;
  className?: string;
}

const { title, value, className = "" } = Astro.props;
---

<div class={`bg-white rounded-lg p-6 ${className}`}>
  <h3 class="text-2xl md:text-3xl font-semibold text-black mb-2">{value}</h3>
  <p class="text-grey text-sm md:text-base font-regular">{title}</p>
</div>
