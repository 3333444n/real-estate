---
import type { Contact } from '../data/types';

interface Props {
  contact?: Contact;
}

const { contact } = Astro.props;
---

<section class="w-full bg-black py-16 md:py-12 sm:py-8">
  <div class="max-w-6xl mx-auto px-8 md:px-4">
    <div class="bg-white rounded-2xl p-12 md:p-8 sm:p-6 shadow-lg">
      <!-- Main Heading -->
      <div class="text-center mb-12 md:mb-8 sm:mb-6">
        <h2
          class="text-black text-4xl md:text-3xl sm:text-2xl font-semibold mb-4 leading-tight"
        >
          ¿Quieres conocer más<br />detalles?
        </h2>
        <p class="text-grey text-lg md:text-base font-regular">
          Deja tu información y te contactaremos
        </p>
      </div>

      <!-- Contact Form -->
      <form class="max-w-md mx-auto space-y-6">
        <!-- Name Field -->
        <div class="space-y-2">
          <input
            type="text"
            name="name"
            placeholder="Nombre"
            required
            class="w-full bg-transparent border-0 border-b-2 border-grey-light px-0 py-3 text-black placeholder-grey focus:border-black focus:outline-none transition-colors duration-300 text-lg font-regular"
          />
        </div>

        <!-- Phone Field -->
        <div class="space-y-2">
          <input
            type="tel"
            name="phone"
            placeholder="Teléfono"
            required
            class="w-full bg-transparent border-0 border-b-2 border-grey-light px-0 py-3 text-black placeholder-grey focus:border-black focus:outline-none transition-colors duration-300 text-lg font-regular"
          />
        </div>

        <!-- Submit Button -->
        <div class="pt-6">
          <button
            type="submit"
            class="w-full bg-black text-white py-4 px-8 rounded-full text-lg font-semibold hover:bg-grey-darker transition-colors duration-300 hover:text-white hover:bg-purple"
          >
            Solicitar llamada
          </button>
        </div>

        <!-- Privacy Policy -->
        <div class="text-center pt-4">
          <p class="text-grey text-sm font-regular">
            Al enviar este formulario, aceptas nuestra
            <a
              href="#"
              class="text-black hover:text-grey-dark underline transition-colors duration-300"
            >
              política de privacidad
            </a>
          </p>
        </div>
      </form>

      <!-- Contact Options -->
      <div
        class="flex justify-center items-center mt-8 pt-6 border-t border-grey-light"
      >
        <div class="flex items-center gap-4 w-full max-w-md">
          <!-- WhatsApp -->
          <a
            href="https://wa.me/1234567890"
            target="_blank"
            rel="noopener noreferrer"
            class="w-full flex items-center justify-center gap-3 bg-white text-black border border-black px-8 py-4 rounded-full font-semibold hover:bg-black hover:text-white transition-colors duration-300 text-lg"
          >
            O envíanos un Whatsapp
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Form submission handler
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector("form");
    if (form) {
      form.addEventListener("submit", function (e) {
        e.preventDefault();

        const formData = new FormData(form);
        const name = formData.get("name");
        const phone = formData.get("phone");

        // Here you can add your form submission logic
        // For now, we'll just show an alert
        alert(`Gracias ${name}! Te contactaremos pronto al ${phone}`);

        // Reset form
        form.reset();
      });
    }
  });
</script>
