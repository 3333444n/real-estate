---
import type { Location } from '../data/types';

interface Props {
  title?: string;
  location?: Location;
}

const { title = "Ubicación", location } = Astro.props;

// Use location.mapsLink if available, otherwise fallback to default
const mapSrc = location?.mapsLink && location.mapsLink.includes('embed') 
  ? location.mapsLink
  : "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3762.555383341075!2d-99.10401232445186!3d19.431607381847602!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1fc002ca1ac3d%3A0x7703fc1361ea4e8!2sCalle%20Ote.%20150%20163%2C%20Moctezuma%202da%20Secc%2C%20Venustiano%20Carranza%2C%2015530%20Ciudad%20de%20M%C3%A9xico%2C%20CDMX!5e0!3m2!1sen!2smx!4v1751436931455!5m2!1sen!2smx";
---

<section class="py-16 bg-white">
  <div class="container px-2 md:px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-semibold text-black mb-4">{title}</h2>
      <p class="text-grey-dark text-lg">
        Descubre la ubicación estratégica de esta propiedad
      </p>
    </div>

    <div class="w-full lg:w-[90vw] xl:w-[1200px] mx-auto">
      <div class="aspect-video rounded-lg overflow-hidden shadow-lg">
        <iframe
          src={mapSrc}
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Ubicación de la propiedad"></iframe>
      </div>
    </div>
  </div>
</section>
